/* pages/add-address/add-address.wxss */

 @import "../../utils/city.wxss"; 

.addAddress {
  background: #fafafa;
  position: absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}

.addAddress .addItem {
  display: flex;
  align-items: center;
  background:#fff;
  height:80rpx;
  line-height: 80rpx;
  padding:0 30rpx;
  border-bottom:solid 2rpx #eee;
  font-size:29rpx;
}

.addAddress  .addItem .name {
  flex:0 0 140rpx;
}

.addAddress  .addItem .con {
   flex:1; 
}

.addAddress .btn {
  margin:20rpx 30rpx;
  font-size:29rpx;
  background:#dd5b55;
}

.wetoast__bd__title{
   font-size:28rpx !important;
}