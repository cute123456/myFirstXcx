<!-- 主容器 --> 
  <!-- 单价 -->
  <template name="cartNum">
    <text style="display:block;margin-bottom:20px;color:red;font-size:26px;text-align:center;">{{item.money}}</text> 
<view class="stepper">
    <!-- 减号 -->  
    <text class="{{item.minusStatus}}" bindtap="bindMinus">-</text>  
    <!-- 数值 -->  
    <input type="number" bindchange="bindManual" value="{{item.num}}" />  
    <!-- 加号 -->  
    <text class="normal" bindtap="bindPlus">+</text>  
</view> 
</template> 